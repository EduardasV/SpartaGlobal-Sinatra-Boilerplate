<form action="/books/<%= @book[:id] %>" method="post">
  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title" value="<%= @book[:title] %>">
  </div>
  <div>
    <label>Body</label>
    <textarea name="book_body" placeholder="The body of the text"><%= @book[:book_body] %></textarea>
  </div>
  <div>
    <label>Image</label>
    <input type="text" name="image" placeholder="Enter an image link" value="<%= @book[:image] %>">
  </div>
  <div>
    <input type="submit" value="Save Post">
  </div>
  <% if(@book[:id] != '') %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
